{
    "name": "spacetab-io/harmony-http-client",
    "description": "Asynchronous http client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pieter Hordijk",
            "email": "info@pieterhordijk.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "amphp/amp": "^2.4",
        "amphp/http-client": "^4.2",
        "spacetab-io/harmony-cache": "^1.1"
    },
    "require-dev": {
        "amphp/phpunit-util": "^1.3",
        "harmonyio/php-codesniffer-ruleset": "^1.0.0-rc1",
        "maglnet/composer-require-checker": "^1.1.0",
        "phpunit/phpunit": "^9",
        "slevomat/coding-standard": "^4.8.6",
        "squizlabs/php_codesniffer": "^3.4.0"
    },
    "autoload": {
        "psr-4": {
            "HarmonyIO\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HarmonyIO\\HttpClientTest\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
